{
  "name": "electron-calendrier-livecampus",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "scripts": {
    "copy-index": "copyfiles -u 1 src/renderer/index.html dist/",
    "start": "electron .",
    "clean": "rimraf dist",
    "dev": "tsc && electron .",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/tailwind.css",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "webpack",
    "build": "npm run clean && tsc && npm run build:backend && npm run build:frontend && npm run build:css && npm run copy-index"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "copyfiles": "^2.4.1",
    "electron": "^25.0.0",
    "postcss": "^8.0.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^4.0.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "date-fns": "^3.6.0"
  }
}
