{
  "name": "electron-calendrier-livecampus",
  "version": "1.0.0",
  "main": "dist/main/main.js",
  "scripts": {
    "copy-index": "copyfiles -u 1 src/renderer/index.html dist/",
    "start": "npm run build && tsc && electron .",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && npm run build:css && npm run copy-index",
    "dev": "tsc && electron .",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./dist/tailwind.css"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "copyfiles": "^2.4.1",
    "electron": "^25.0.0",
    "postcss": "^8.0.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "date-fns": "^3.6.0"
  }
}
